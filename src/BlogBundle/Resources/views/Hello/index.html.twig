{% extends "BlogBundle::layout.html.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}
	
{% block blog_body %}
	{%  for article in articles %}
		<article class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
			<header>
				<h2>{{ article.titre }}</h2>
			</header>
			<p>{{ article.contenu }}</p>
			<footer>
				Créé par {{ article.auteur }}, le {{ article.date | date("d-m-Y") }}
			</footer>
		</article>
	{% endfor %}
{% endblock %}